<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/coordinate" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinate"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:background="@color/Theme">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:elevation="10dp"
            app:boxBackgroundColor="@color/white"
            app:boxCornerRadiusBottomEnd="23dp"
            app:boxCornerRadiusBottomStart="23dp"
            app:boxCornerRadiusTopEnd="23dp"
            app:boxCornerRadiusTopStart="23dp"
            app:boxStrokeColor="@color/white"
            app:boxStrokeWidth="0dp"
            app:layout_anchor="@id/view"
            app:layout_anchorGravity="center">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editPlaceName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="10dp"
                android:drawableTint="@color/Theme"
                android:hint="Search"
                android:inputType="text"
                android:maxLines="1"
                app:hintEnabled="false" />
        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_marginBottom="5dp"
            android:elevation="5dp" />

        <ImageButton
            android:id="@+id/btnback"
            android:layout_width="41dp"
            android:layout_height="59dp"
            android:layout_marginTop="14dp"
            android:backgroundTint="@color/Theme"
            android:clickable="true"
            android:src="@drawable/ic_baseline_arrow_back_24" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</RelativeLayout>